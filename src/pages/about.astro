---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import { SITE_DESCRIPTION, SITE_TITLE, SOCIAL_LINKS } from "../consts";
---

<!doctype html>
<head>
  <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
</head>

<body class="flex flex-col min-h-screen">
  <Header class="absolute w-screen" title={SITE_TITLE} />

  <main
    class="grow flex flex-col gap-2 uppercase font-bold text-xl justify-center place-content-center place-items-center"
  >
    <h1 class="text-center">Nathan Gage</h1>
    <div>
      <p>Machine Learning Engineer</p>
      <p>@ Cognitive Space</p>
    </div>
    <div class="flex flex-col">
      {SOCIAL_LINKS.map(({ siteName, link }) => <a href={link}>{siteName}</a>)}
    </div>
  </main>
</body>
